# =============================================================================
# Scandium - Production-Grade Precision Landing System
# EditorConfig Configuration
# =============================================================================
# This file defines coding style preferences for cross-IDE consistency.
# Reference: https://editorconfig.org/
# =============================================================================

# Top-most EditorConfig file
root = true

# -----------------------------------------------------------------------------
# Default Settings (All Files)
# -----------------------------------------------------------------------------

[*]
# Character encoding
charset = utf-8

# Line endings (Unix-style)
end_of_line = lf

# Trailing whitespace removal
trim_trailing_whitespace = true

# Final newline insertion
insert_final_newline = true

# Indentation
indent_style = space
indent_size = 4

# Maximum line length (advisory)
max_line_length = 100

# -----------------------------------------------------------------------------
# Python Source Files
# -----------------------------------------------------------------------------

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.pyi]
indent_style = space
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# Configuration Files
# -----------------------------------------------------------------------------

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{json,json5}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Shell Scripts
# -----------------------------------------------------------------------------

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4
end_of_line = lf

# -----------------------------------------------------------------------------
# Makefiles (Require Tabs)
# -----------------------------------------------------------------------------

[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# Documentation
# -----------------------------------------------------------------------------

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

[*.rst]
indent_style = space
indent_size = 3

[*.txt]
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Web Files
# -----------------------------------------------------------------------------

[*.{html,htm}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# -----------------------------------------------------------------------------
# Docker
# -----------------------------------------------------------------------------

[Dockerfile]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------

[.github/workflows/*.yml]
indent_style = space
indent_size = 2

[.gitlab-ci.yml]
indent_style = space
indent_size = 2

# -----------------------------------------------------------------------------
# Data Files
# -----------------------------------------------------------------------------

[*.{csv,tsv}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.xml]
indent_style = space
indent_size = 2
